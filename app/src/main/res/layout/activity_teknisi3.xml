<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teknisi3"
    android:gravity="end"
    android:orientation="vertical"
    android:background="@drawable/background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@color/purple_main"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageButton
        android:id="@+id/backarrow"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="9dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="7dp"
        android:layout_toEndOf="@+id/backarrow"
        android:ems="16"
        android:fontFamily="@font/montserrat"
        android:gravity="left|center"
        android:text="Profil Teknisi"
        android:textColor="@color/white"
        android:textSize="19dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="225dp"
        android:layout_height="222dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="93dp"
        app:srcCompat="@drawable/teknisi3" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="39dp"
        android:ems="100"
        android:fontFamily="@font/montserrat_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Saiful Anwar S.Kom"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="39dp"
        android:ems="100"
        android:fontFamily="@font/montserrat"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Teknisi Wahana Laptop"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MyRating"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="47dp"
        android:ems="100"
        android:fontFamily="@font/montserrat"
        android:foregroundGravity="center"
        android:gravity="left"
        android:text="Tentang"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <RatingBar
        android:id="@+id/MyRating"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="85dp"
        android:foregroundTint="#FFFFFF"
        android:indeterminateTint="#FFC107"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:rating="5"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:secondaryProgressTint="@color/yellow"
        android:stepSize="0.1" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="61dp"
        android:background="@color/purple_main" />

    <TextView
        android:id="@+id/description"
        android:layout_width="337dp"
        android:layout_height="119dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/montserrat"
        android:text="Lulusan Teknik Komputer Universitas Brawijaya tahun 2007. Alamat di jl. Soekarno Hatta, Malang Raya. Usia 28 tahun."
        android:textColor="@color/purple_main"
        android:textSize="16dp" />

    <Button
        android:id="@+id/Askbtn"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/yellow"
        android:text="Tanya"
        android:textColor="@color/purple_main" />


</RelativeLayout>