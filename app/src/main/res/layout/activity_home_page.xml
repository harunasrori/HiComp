<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".HomePage">


    <HorizontalScrollView
        android:layout_width="430dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:text="Button 1"
                app:srcCompat="@drawable/ssd_sata" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:text="Button 1"
                app:srcCompat="@drawable/ram" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:text="Button 1"
                app:srcCompat="@drawable/dvd" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:text="Button 1"
                app:srcCompat="@drawable/fan" />

            <ImageButton
            android:id="@+id/button5"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:text="Button 1"
            app:srcCompat="@drawable/ssd_sata" />
        </LinearLayout>

    </HorizontalScrollView>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="177dp"
        android:layout_height="74dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rounded_corner_purple" />

    <TextView
        android:id="@+id/textView3"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Rounded"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/white"
        android:text="HiComp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="291dp"
        android:backgroundTint="@color/purple_main"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174"
        app:srcCompat="@drawable/rounded_corner" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="114dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/yellow"
        android:text="DOMPET"
        android:textColor="#351C56"
        app:icon="@drawable/dompet"
        app:iconSize="15dp"
        app:iconTint="#351C56"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="PROMO MENARIK"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="APA YANG ANDA BUTUHKAN?"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />



    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </HorizontalScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_main"
        app:itemIconTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu1" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="249dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:shadowColor="#351C56"
        android:text="USERNAME"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#351C56"
        android:textColorHighlight="#351C56"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Rounded"
        android:layout_width="125dp"
        android:layout_height="119dp"
        android:backgroundTint="@color/purple_main"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/man" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_marginStart="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logofixxed" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Rounded"
        android:layout_width="155dp"
        android:layout_height="96dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ask_service" />

    <ImageButton
        android:id="@+id/imageButton3"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Rounded"
        android:layout_width="155dp"
        android:layout_height="96dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/pointlaptop3" />


</androidx.constraintlayout.widget.ConstraintLayout>
